<%= turbo_stream_from comment %>

<%= turbo_frame_tag comment, target: "_top" do %>
  <div class="d-flex justify-content-between">
    <div>
    <% if comment.parent.nil? %>
      <strong><%= link_to comment.user.first_name, profile_path(comment.user.id) %></strong>
    <% else %>
      <strong><%= link_to comment.user.first_name, profile_path(comment.user.id) %></strong> replied to <strong><%= link_to comment.parent&.user&.first_name, profile_path(comment.parent&.user&.id) %></strong>:
    <% end %>
    </div>
    <div class="d-flex">
      <%= link_to "Edit", edit_comment_path(comment), class: "mr-2" if comment.user_id == current_user.id %>
      <%= button_to "Delete", comment_path(comment), method: :delete, data: { confirm: "Are you sure?" } if comment.user_id == current_user.id %>
    </div>
  </div>

  <%= comment.body %>
<% end %>
