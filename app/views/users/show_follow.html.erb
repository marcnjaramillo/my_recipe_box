<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%#= gravatar_for @user %>
      <h1><%= @user.username %></h1>
      <span><%= link_to "view my profile", user_path(current_user.username) %></span>
      <span><b>Recipes:</b> <%= @user.recipes.count %></span>
    </section>
    <section class="stats">
      <%= render 'shared/relationship_stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to user.username %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
<div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>