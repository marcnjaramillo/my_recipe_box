<!DOCTYPE html>
<html>
  <head>
    <title>MyRecipeBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body id="body">
    <header>
      <%= render 'layouts/header'%>
      <%= render 'layouts/flash' %>
    </header>
    <div class="app">
      <%= yield %>
    </div>
  </body>
</html>
